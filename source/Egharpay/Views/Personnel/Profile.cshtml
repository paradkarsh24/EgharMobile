
@model Egharpay.Models.PersonnelProfileViewModel
@{
    ViewBag.Title = "Personnel Profile";
}
<div class="row animated fadeInRight">
    <div class="col-md-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Profile Detail</h5>
            </div>
            <div>
                <div class="ibox-content no-padding border-left-right">
                    <img alt="image" class="img-responsive" src="/Images/profile_big.jpg">
                </div>
                <div class="ibox-content profile-content">
                    <h4><strong>@Model.Personnel.FullName.ToUpper()</strong></h4>
                    <p><i class="fa fa-map-marker"></i> @Model.Personnel.FullAddress</p>
                    <h5>
                        About me
                    </h5>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitat.
                    </p>
                    <div class="">
                        <div class="row">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal4"><i class="fa fa-upload"></i> Upload Profile Picture</button>
                            </div>
                        </div>
                    </div>
                    <div class="modal inmodal" id="myModal4" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog  modal-sm">
                            <div class="modal-content animated fadeIn">
                                <div class="modal-body">
                                            <div class="row">
                                                <div class="">
                                                    <div class="image-crop">
                                                        <img id="UploadProfilePicture" src="~/Images/p3.jpg">
                                                    </div>
                                                    <br/>
                                                    <div class="btn-group">
                                                        <label title="Upload image file" for="inputImage" class="btn btn-warning">
                                                            <input type="file" accept="image/*" name="file" id="inputImage" class="hide">
                                                            Browse
                                                        </label>
                                                        <button class="btn btn-danger" type="button" ng-click="model.uploadPhoto()">Upload</button>
                                                    </div>
                                                    <div class="btn-group">
                                                        <button class="btn btn-default btn-circle" id="zoomIn" type="button"><i class="fa fa-plus"></i></button>
                                                        <button class="btn btn-default btn-circle" id="zoomOut" type="button"><i class="fa fa-minus"></i></button>
                                                        @*   <button class="btn btn-white" id="rotateLeft" type="button">Rotate Left</button>*@
                                                        @*<button class="btn btn-white" id="rotateRight" type="button">Rotate Right</button>*@
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                  
                                                </div>
                                            </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary" ng-click="model.deletePhoto()">Delete Picture</button>
                                    <button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Edit Profile</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Config option 1</a>
                        </li>
                        <li>
                            <a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("Edit", "Personnel", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                    @Html.ValidationSummary(false, null, new { @class = "row alert alert-error" })
                                </div>
                            </div>

                        }
                        @Html.HiddenFor(model => Model.Personnel.PersonnelId)
                        @Html.Partial("_PersonnelProfile", Model)
                        <div class="col-md-4 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-danger">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div>
                    <button class="btn btn-primary btn-block m"></button>
                </div>
            </div>
        </div>
    </div>
</div>