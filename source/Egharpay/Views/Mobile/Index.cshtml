@using Egharpay.Extensions
@model Egharpay.Models.BaseViewModel

@{
    var layout = User.IsSuperUserOrAdmin() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = "Index";
}

<div ng-controller="MobileController as model" ng-init="model.initialise('@Model.Filter')">
    <div class="row">
        <div class="col-lg-12">
            <h3>
                Mobiles
            </h3>
        </div>
    </div>

    <div class="row">
        @if (User.IsInAnyRoles("Admin"))
        {
            <div class="col-lg-12">
                <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "Mobile")">
                    <i class="fa fa-user"></i> Create
                </a>
            </div>
        }
    </div>
    <br />
    @*<div class="ibox-content">
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-12">
                    <div class="input-group">
                        <input type="text" placeholder="Search" class="input-sm form-control" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchMobile(searchField)"> <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary" ng-click="model.searchMobile(searchField)"> Go!</button>
                        </span>
                    </div>
                </div>
                <div class="project-list">
                </div>
            </div>
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-3 form-inline">
                    @Html.Partial("Pagination/_pageSize")
                </div>
                <div class="col-md-9 text-right">
                    @Html.Partial("Pagination/_pageInformation")
                </div>
            </div>
        </div>*@

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-2">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Price Range</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div id="ionrange_1"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Ram Size</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div id="ionrange_2"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Camera</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div id="ionrange_3"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Battery</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div id="ionrange_4"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Internal Memory</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div id="ionrange_5"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="col-md-3" ng-repeat="mobile in model.mobiles">
                    <a ng-href="/Mobile/Detail/{{mobile.SeoUrl}}">
                        <div class="ibox">
                            <div class="ibox-content product-box">
                                <div class="product-imitation">
                                    [Info]
                                </div>
                                <div class="product-desc">
                                    <span class="product-price">
                                        Active
                                    </span>
                                    @* <small class="text-muted"><span class="label label-info pull-left">Active</span></small>*@
                                    <br />
                                    <a href="#" class="product-name"><strong ng-bind="mobile.Name"></strong></a>
                                    <div class="small m-t-xs">
                                        Many desktop publishing packages and web page editors now.
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <div class="m-t text-left">
                                                <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fa fa-long-arrow-right"></i> </a>

                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            <div class="m-t text-right">
                                                <a href="#" class="btn btn-xs btn-outline btn-warning">Info <i class="fa fa-long-arrow-right"></i> </a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

        </div>
        <div class="form-inline">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("Pagination/_pagination")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $("#ionrange_1").ionRangeSlider({
            min: 0,
            max: 5000,
            type: 'double',
            prefix: "$",
            maxPostfix: "+",
            prettify: false,
            hasGrid: true
        });

        $("#ionrange_2").ionRangeSlider({
            min: 0,
