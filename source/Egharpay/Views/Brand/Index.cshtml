@using Egharpay.Extensions;

@{
    ViewBag.Title = "Index";
}
<br />
<div ng-controller="BrandController as model" ng-init="model.initialise()" ng-show="model.brands.length > 0">
    <div class="row">
        <div class="col-lg-12">
            <h3>
                Brands
            </h3>
        </div>
    </div>
    <br />
    <div class="ibox-content-brand-search">
        <div class="row m-b-sm m-t-sm">
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" placeholder="Search brand.." class="input-sm form-control" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchBrand(searchField)"> <span class="input-group-btn">
                        <button type="button" class="btn btn-sm btn-primary" ng-click="model.searchBrand(searchField)"> Go!</button>
                    </span>
                </div>
            </div>
            <div class="col-md-4">
                <label class="btn btn-w-m btn-warning">
                    <input type="checkbox" ng-model="model.clientsWithUsers" ng-change="model.search()" autocomplete="off" class="ng-pristine ng-untouched ng-valid ng-empty">
                    Top Selling Brands.
                </label>
            </div>
            <div class="project-list">
            </div>
        </div>
        <div class="row m-b-sm m-t-sm">
            <div class="col-md-3 form-inline">
                @*@Html.Partial("Pagination/_pageSize")*@
            </div>
            <div class="col-md-9 text-right">
                @*@Html.Partial("Pagination/_pageInformation")*@
            </div>
        </div>
    </div>
    <br />
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

            <div class="col-md-3" ng-repeat="brand in model.brands">
                <button class="btn btn-default dim btn-brand" ng-href="/Brand/Mobile/{{brand.BrandId}}">
                    <div class="row">
                        <div class="col-lg-12"> <img class="img-brand" ng-src="{{brand.ImagePath | trustAsResourceUrl}}" /></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12"><span class="brand-name" ng-bind="brand.Name"></span></div>
                    </div>
                </button>
            </div>

        </div>
        <div class="form-inline">
            <div class="row">
                <div class="col-lg-12">
                    @*@Html.Partial("Pagination/_pagination")*@
                </div>
            </div>
        </div>
    </div>
</div>
