<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Search By Date </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-1">
                            <div class="form-group">
                                <label>From Date</label>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <daterange-picker name="fromDate" id="fromDate" model="model.fromDate"></daterange-picker>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <label>To Date</label>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <daterange-picker name="toDate" id="toDate" model="model.toDate"></daterange-picker>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <label></label>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <button type="button" ng-click="model.searchByDate()" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Search </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-5 m-b-xs">
                        <div class="row m-b-sm m-t-sm">
                            <div class="col-md-6 form-inline">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                            <div class="col-md-6">
                                @Html.Partial("Pagination/_pageInformation")
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 m-b-xs">
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <input type="text" placeholder="Search" class="input-sm form-control" ng-model="model.searchTerm" ng-keyup="$event.keyCode == 13 && model.search(model.searchTerm)"> <span class="input-group-btn">
                                <button type="button" class="btn btn-sm btn-primary" ng-click="model.search(model.searchTerm)"> Go!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" ng-if="model.sellerOrders.length>0">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Orders </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="table-responsive">
                        <table wt-responsive-table class="table table-responsive table-bordered table-hover dataTables-example dataTable responsive" role="grid" aria-describedby="datatable-fixed-header_info">
                            <thead>
                                <tr role="row">
                                    <th ng-click="model.order('OrderCreatedDate')" ng-class="model.orderClass('OrderCreatedDate')">Order Created Date</th>
                                    <th ng-click="model.order('BuyersName')" ng-class="model.orderClass('BuyersName')">Buyers Name</th>
                                    <th ng-click="model.order('MobileName')" ng-class="model.orderClass('MobileName')">Mobile</th>
                                    <th ng-click="model.order('OrderState')" ng-class="model.orderClass('OrderState')">Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="seller in model.sellerOrders" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled">
                                    <td><span ng-bind="seller.OrderCreatedDate | date:'dd/MM/yyyy'"></span></td>
                                    <td><span ng-bind="seller.BuyersName"></span></td>
                                    <td><span ng-bind="seller.MobileName"></span></td>
                                    <td><span ng-bind="seller.OrderState"></span></td>
                                    <td>
                                        <div class="btn-group pull-right">
                                            <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                <i class="fa fa-chevron-down"></i>
                                            </a>
                                            <ul class="dropdown-menu slidedown">
                                                <li>
                                                    <a style="cursor: pointer;" ng-click="model.updateSellerOrder(seller.OrderId)">
                                                        Cancel Order
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/Orders/{{seller.OrderId}}/Edit">
                                                        Edit
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                @Html.Partial("Pagination/_pagination")
            </div>
        </div>
    </div>

</div>

<div class="row" ng-if="model.sellerOrders.length<=0">
    <div class="col-xs-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <label ng-bind="model.searchMessage"></label>
            </div>
        </div>
    </div>
</div>
