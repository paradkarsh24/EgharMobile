                                            @Html.TextAreaFor(model => model.MobileRepair.Comment, new { @class = "form-control col-md-6 col-xs-12",@rows="6" })
                                            @Html.ValidationMessageFor(model => model.MobileRepair.Comment, "", new { @class = "help-block" })
