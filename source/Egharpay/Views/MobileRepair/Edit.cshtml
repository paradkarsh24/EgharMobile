                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2></h2>
                <div class="clearfix"></div>
            </div>

        </div>
    </div>

</div>

@section Styles {
    @Styles.Render("~/plugins/clockpickerStyles")
}
@section Scripts {
