                                        <div class="row">
                                            <div class="col-md-4 col-sm-12 col-xs-12 col-md-offset-3">
                                                @Html.ValidationSummary(false, null, new { @class = "row alert alert-error" })
                                            </div>
                                        </div>
                                    }
                                    @Html.HiddenFor(model => Model.MobileRepair.MobileRepairId)
                                    @Html.HiddenFor(model => Model.MobileRepair.CreatedDateTime)
