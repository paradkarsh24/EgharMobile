                                            @Html.TextBoxFor(model => model.MobileRepair.Address2, new { @class = "form-control col-md-6 col-xs-12" })
                                            @Html.ValidationMessageFor(model => model.MobileRepair.Address2, "", new { @class = "help-block" })
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                        @Html.LabelFor(model => model.MobileRepair.CountryId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
