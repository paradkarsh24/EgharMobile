                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <daterange-picker value="@Model.MobileRepair.AppointmentDate.Formatted()" name="MobileRepair.AppointmentDate" id="MobileRepair_AppointmentDate" model="model.AppointmentDate"></daterange-picker>
                                        </div>
                                    </div>

                                    <div class="form-group clockpicker" data-autoclose="true">
                                        @Html.LabelFor(model => model.MobileRepair.AppointmentTime, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            @Html.TextBoxFor(model => model.MobileRepair.AppointmentTime, new { @class = "form-control col-md-6 col-xs-12" })
                                            <span class="fa fa-clock-o daterangepickerdirective"></span>
                                            @Html.ValidationMessageFor(model => model.MobileRepair.AppointmentTime, "", new { @class = "help-block" })
                                        </div>
                                    </div>



                                    @*<div class="form-group">
                                            @Html.LabelFor(model => model.MobileRepair.AppointmentDate, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                            <div class="input-group date col-md-4 col-sm-4 col-xs-12">
                                                @Html.TextBoxFor(model => model.MobileRepair.AppointmentDate, new { @class = "form-control col-md-6 col-xs-12" })
                                                @Html.ValidationMessageFor(model => model.MobileRepair.AppointmentDate, "", new { @class = "help-block" })
                                            </div>
                                        </div>*@
