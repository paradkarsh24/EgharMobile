                                            @Html.ValidationMessageFor(model => model.MobileRepair.ModelName, "", new { @class = "help-block" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MobileRepair.Description, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            @Html.TextBoxFor(model => model.MobileRepair.Description, new { @class = "form-control col-md-6 col-xs-12" })
                                            @Html.ValidationMessageFor(model => model.MobileRepair.Description, "", new { @class = "help-block" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MobileRepair.CouponCode, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            @Html.TextBoxFor(model => model.MobileRepair.CouponCode, new { @class = "form-control col-md-6 col-xs-12" })
                                            @Html.ValidationMessageFor(model => model.MobileRepair.CouponCode, "", new { @class = "help-block" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MobileRepair.Company, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                        <div class="col-md-4 col-sm-4 col-xs-12">
