@model Egharpay.Models.HomeViewModel
@using Egharpay.Extensions
@{
    var layout = User.IsSuperUserOrAdmin() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = "Confirm Email Address Sent";
}

<div class="row">
    <div class="col-md-12">
        <div class="widget red-bg p-lg text-center">
            <div class="m-b-md">
                <i class="fa fa-bell fa-4x"></i>
                <h1 class="m-xs"></h1>
                <br/>
                <small class="font-bold no-margins">
                  @ViewBag.Title
                </small>
                <h3> Please check your Email Inbox, a confirm Email is Sent to @ViewBag.Email</h3>
            </div>
        </div>
       
    </div>
</div>  