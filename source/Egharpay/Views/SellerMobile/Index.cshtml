
@{
    ViewBag.Title = "Seller Mobiles";
}

<div ng-controller="SellerMobileController as model" ng-init="model.retrieveSellerMobiles()">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Search </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-5 m-b-xs">
                            <div class="row m-b-sm m-t-sm">
                                <div class="col-md-6 form-inline">
                                    @Html.Partial("Pagination/_pageSize")
                                </div>
                                <div class="col-md-6">
                                    @Html.Partial("Pagination/_pageInformation")
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3 m-b-xs">
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="Search" class="input-sm form-control" ng-model="model.searchTerm" ng-keyup="$event.keyCode == 13 && model.search(model.searchTerm)"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary" ng-click="model.searchSellerMobile(model.searchTerm)"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight" ng-if="model.sellerMobiles.length >0">
        <div class="row">
            <div class="col-md-3" ng-repeat="sellerMobile in model.sellerMobiles">
                <a ng-href="/Mobile/Detail/{{sellerMobile.MobileId}}">
                    <div class="ibox">
                        <div class="ibox-content product-box">
                            <div class="product-imitation">
                                [Info]
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    Active
                                </span>
                                @* <small class="text-muted"><span class="label label-info pull-left">Active</span></small>*@
                                <br />
                                <a href="#" class="product-name"><strong ng-bind="sellerMobile.MobileName"></strong></a>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <div class="m-t text-left">
                                            <a href="#" class="btn btn-xs btn-outline btn-primary">Info <i class="fa fa-long-arrow-right"></i> </a>

                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="m-t text-right">
                                            <a href="#" class="btn btn-xs btn-outline btn-warning">Info <i class="fa fa-long-arrow-right"></i> </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="form-inline">
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("Pagination/_pagination")
                </div>
            </div>
        </div>
    </div>
    
    <div ng-if="!model.sellerMobiles.length >0" class="ibox-content">
        <p> No records found.</p>
    </div>
</div>