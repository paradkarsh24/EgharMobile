@model Egharpay.Models.HomeViewModel
@using Egharpay.Extensions
@{
    var layout = User.IsSuperUserOrAdminOrSeller() ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout_2.cshtml";
    Layout = layout;
    ViewBag.Title = "Mobile";
}

<div ng-controller="MobileController as model" ng-init="model.searchMobile('@Model.SearchKeyword')">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-8">
            <br />
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Mobile")">Mobile</a>
                </li>
            </ol>
        </div>
        <div class="col-lg-2 page-information">
            @Html.Partial("Pagination/_pageInformation")
        </div>
    </div>

    @*<div class="row">
            @if (User.IsInAnyRoles("Admin"))
            {
                <div class="col-lg-12">
                    <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "Mobile")">
                        <i class="fa fa-user"></i> Create
                    </a>
                </div>
            }
        </div>*@
    <br />

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-2">
                @Html.Partial("_Filter")
            </div>
            <div class="col-lg-10">
                @Html.Partial("_MobileList")
            </div>
        </div>
        <div ng-if="model.mobiles.length>0" class="form-inline">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-10">
                @Html.Partial("Pagination/_pagination")
            </div>
        </div>

        <div class="form-inline">
            <div class="row">
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10">
                </div>
            </div>
        </div>
    </div>
</div>


